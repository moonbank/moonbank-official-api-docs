<?xml version="1.0" encoding="UTF-8"?>

<configuration>
  <property name="default_pattern" value="%date [%thread] %-5level %logger{80} - %msg%n" />
  <property name="charset" value="UTF-8" />
  <property name="log.level" value="DEBUG"/>
  <property name="log.basedir" value="./logs"/>
  <property name="log.appender" value="STDOUT"/>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${default_pattern}</pattern>
      <charset>${charset}</charset>
    </encoder>
  </appender>

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${log.basedir}/api_docs.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${log.basedir}/api_web.log.%d{yyyy-MM-dd}</fileNamePattern>
    </rollingPolicy>
    <encoder>
      <pattern>${default_pattern}</pattern>
      <charset>${charset}</charset>
    </encoder>
  </appender>

  <logger name="com.mine">
    <level value="${log.level}" />
  </logger>

  <logger name="org.springframework">
    <level value="WARN" />
  </logger>

  <root>
    <level value="INFO" />
    <appender-ref ref="${log.appender}" />
  </root>
</configuration>
